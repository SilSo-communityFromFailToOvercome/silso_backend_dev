rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their own files
    match /posts/{userId}/{postId}/{fileName} {
      allow read: if true; // Allow public read for now (you can restrict this later)
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write in general posts folder
    match /posts/{allPaths=**} {
      allow read: if true; // Allow public read
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Fallback rule for testing - you should remove this in production
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}